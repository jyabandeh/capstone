<Window x:Class="LibraryInfoWpfApp.LibrarianLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryInfoWpfApp"
        mc:Ignorable="d"
        Title="Librarian Login" Height="268.401" Width="388.832">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="67,64,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="71,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="23" Margin="138,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="23" Margin="138,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="98,159,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <Button x:Name="LoginCloseButton" Content="Close" HorizontalAlignment="Left" Margin="206,159,0,0" VerticalAlignment="Top" Width="75" Click="LoginCloseButton_Click"/>

    </Grid>
</Window>
